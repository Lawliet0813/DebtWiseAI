{
  "name": "debtwise-ai",
  "version": "1.0.0",
  "description": "個人債務管理與還款策略AI助手",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm server\" \"pnpm client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && vite",
    "build": "cd client && vite build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "db:migrate": "node server/db/migrate.js",
    "db:seed": "node server/db/seed.js",
    "start": "node server/index.js"
  },
  "keywords": ["debt", "finance", "ai", "personal-finance", "react"],
  "author": "DebtWise AI Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "uuid": "^9.0.1",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.1.1",
    "vite": "^5.0.5",
    "vitest": "^1.0.4",
    "jsdom": "^23.0.1",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.5",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
